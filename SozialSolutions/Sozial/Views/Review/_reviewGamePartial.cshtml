@model Sozial.Models.ReviewEnvelope

@using (Html.BeginForm("Create", "Review"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Write a Review</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.gameId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.gameId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="pull-left">
            <form>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.review.text, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.review.text, "", new { @class = "text-danger" })
                </div>
            </form>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Post Review" class="btn btn-success pull-right" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
