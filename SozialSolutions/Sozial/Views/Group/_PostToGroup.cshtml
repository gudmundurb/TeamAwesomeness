@model Sozial.Models.GroupPostViewModel

@using (Html.BeginForm("PostToGroup","Group")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.groupId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.groupId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        

        <h4 class="title-adjustments">Write a Review</h4>
        <div class="widget-area pull-left">
            <form>
                <div>
                    @Html.EditorFor(model => model.newPost.text, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.newPost.text, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.newPost.imageUrl, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.newPost.imageUrl, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Post" class="btn btn-success pull-right"/>
            </form>
        </div>







