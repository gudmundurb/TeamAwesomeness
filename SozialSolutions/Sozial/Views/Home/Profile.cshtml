@model Sozial.Models.ProfileViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Profile</title>
</head>
<body>
    <div>
        <h1>@Model.profileOwner.UserName </h1>
        @Model.profileOwner.userProfilePic

    </div>

    <h2> profile posts</h2>
    <div>
        @foreach (Sozial.Models.PostModel post in Model.profilePosts)
        {
            @Html.Partial("../Shared/_postPartial", post)
        }
    </div>
    <h2> profile posts</h2>





    <div>
        <h4>ProfileViewModel</h4>
        <hr />

        <h3>My Friends: </h3>
        <dl class="dl-horizontal">
            
            @foreach (Sozial.Models.ApplicationUser item in Model.myFriends)
            {
            <dd style ="color: red;">
                 @Html.ActionLink(item.UserName, "Profile", new {username = item.UserName})
            </dd>
            }
       
        </dl>
        <h3>My Groups: </h3>
            <dl class="dl-horizontal">

                @foreach (Sozial.Models.GroupModel item in Model.myGroups)
                {
                    <dd style="color: red;">
                        @item.groupName
                    </dd>
                    <dd>
                        @item.groupPicture
                    </dd>
                }
            </dl>
        <h3>My newsFeed: </h3>

            <dl class="dl-horizontal">
                @foreach (Sozial.Models.PostModel item in Model.newestPosts)
                {
                    
                    @Html.Partial("../Shared/_postPartial", item)
                }

            </dl>


                
   </div>
    @Html.Partial("_PostToProfilePartial", new Sozial.Models.PostToProfileViewModel() { profileOwner = Model.profileOwner.UserName , newPost = new Sozial.Models.PostModel() })
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
