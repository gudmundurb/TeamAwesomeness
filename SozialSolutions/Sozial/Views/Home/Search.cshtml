@model IEnumerable<Sozial.Models.ApplicationUser>

@{
    ViewBag.Title = "All Users";
}


@using (Html.BeginForm("Search","Home"))
{    
    <div class="container">
        <div class="row">
            <div class="well user-details">
                <h2 >Find Users</h2>
                <hr />
                <div class="title-adjustments">
                    <input type="submit" value="Search Users" class="btn btn-success btn-sm pull-right">
                    @Html.TextBox("username", null, new { @class = "form-group input-sm pull-right" })                    
                </div>
                @foreach (var item in Model)
                {
                    <div class="widget-area comment-section container">
                        <div class="col-sm-1 img_resizer pull-left">
                            <a href="@Url.Action("Profile", "Home", new { username = @item.UserName })" title="Profile Picture">
                                @if (String.IsNullOrEmpty(item.userProfilePic))
                                {
                                    <img class="img-rounded" src="http://avatarbox.net/avatars/img7/blue_invader_avatar_picture_70258.jpg" alt="No profile picture" />
                                }
                                else
                                {
                                    <img class="img-rounded" src="@Url.Content(item.userProfilePic)" alt="@Html.DisplayFor(modelItem => item.UserName)" />
                                }
                            </a>
                        </div>
                        <div class="col-sm-9 pull-left">
                            <a href="@Url.Action("Profile", "Home", new { username = @item.UserName })" title="Username">@item.UserName</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}