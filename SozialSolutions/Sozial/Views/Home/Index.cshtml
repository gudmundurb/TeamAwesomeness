@model Sozial.Models.FrontPageViewModel


@{
    ViewBag.Title = "Home Page";
}


<div class="carousel-custom-container">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            <li data-target="#carousel-example-generic" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="@Url.Content("~/Content/Images/halfPageBanner1.png")" />
            </div>
            <div class="item">
                <img src="@Url.Content("~/Content/Images/halfPageBanner2.png")" />
            </div>
            <div class="item">
                <img src="@Url.Content("~/Content/Images/halfPageBanner3.png")" />
            </div>
            <div class="item">
                <img src="@Url.Content("~/Content/Images/halfPageBanner4.png")" />
            </div>
        </div>
        <div class="logo_motto_frontpage img-responsive">
            <img src="@Url.Content("~/Content/Images/logo_motto.png")" />
        </div>
    </div> <!-- Carousel -->
</div>

<div class="container">
    <div class="navbar text-center">
        <ul class="list-inline list-unstyled">
            <li style="color: red; font-weight: bold;">TO BE REMOVED</li>
            <li class="top-menu-button">
                @Html.ActionLink("Friends", "myFriends", "Home")
            </li>
            <li class="top-menu-button">
                @Html.ActionLink("Groups", "Index", "Group")
            </li>
            <li class="top-menu-button">
                @Html.ActionLink("Games", "Index", "Game")
            </li>
            <li class="top-menu-button">
                @Html.ActionLink("Post", "../Post")
            </li>
        </ul>
    </div>
    <div class="row front-page-item">
        <h3>Latest News</h3>
        <div class="col-md-6 list-group pull-left">
            @foreach (Sozial.Models.NewsModel item in Model.newestNews)
            {
                <a class="list-group-item active container">
                    @if (String.IsNullOrEmpty(item.imageUrl))
                    {
                        <div class="col-md-9">
                            <small class="pull-right title-adjustments">@Html.DisplayFor(modelItem => item.createdDate.Day)/@Html.DisplayFor(modelItem => item.createdDate.Month)/@Html.DisplayFor(modelItem => item.createdDate.Year)</small>
                            <h4>@Html.DisplayFor(modelItem => item.title)</h4>
                            <hr />
                            <p class="title-adjustments text_limit">
                                @Html.DisplayFor(modelItem => item.text)
                            </p>
                            <div class="title-adjustments"><input id="readMore" type="button" title="Read More" value="...Read more" onclick="location.href='@Url.Action("Index", "News")'" /></div>
                        </div>
                    }
                    else
                    {
                        <div class="media col-md-2">
                            <figure class="pull-left thumbnail img-responsive" >
                                <img class="media-object img-responsive" src="@item.imageUrl" alt="@Html.DisplayFor(modelItem => item.title)" />
                            </figure>
                        </div>
                            <small class="pull-right title-adjustments">@Html.DisplayFor(modelItem => item.createdDate.Day)/@Html.DisplayFor(modelItem => item.createdDate.Month)/@Html.DisplayFor(modelItem => item.createdDate.Year)</small>
                            <h4>@Html.DisplayFor(modelItem => item.title)</h4>
                            <hr />
                            <p class="title-adjustments text_limit">
                                @Html.DisplayFor(modelItem => item.text)
                            </p>
                            <div class="title-adjustments"><input id="readMore" type="button" title="Read More" value="...Read more" onclick="location.href='@Url.Action("Index", "News")'" /></div>
                    }
                </a>
            }
        </div>
    </div>
</div>













































<div class="col-md-6">
    <div class="container">
        <div class="row">
            <div class="well">
                <div class="list-group">
                    <h2 class="title-adjustments">Recent Posts</h2>
                    <div>
                        @foreach (Sozial.Models.PostModel item in Model.newestPosts)
                        {
                            <div class="well">
                                <div class="col-md-12">
                                    <div class="media col-md-3">
                                        <figure class="pull-left img_resizer">
                                            @if (String.IsNullOrEmpty(item.imageUrl))
                                            {
                                                <img class="media-object img-rounded img-responsive thumbnails" src="http://placehold.it/350x250" alt="placehold.it/350x250">
                                            }
                                            else
                                            {
                                                <img class="media-object img-rounded img-responsive thumbnails" src="@item.imageUrl" alt="@Html.DisplayFor(modelItem => item.postID)" />
                                            }
                                        </figure>
                                    </div>
                                    <div class="homepage-posts-user">
                                        <h4>
                                            @item.userID
                                        </h4>
                                    </div>
                                    <div>
                                        <p>
                                            @item.text
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        </div>




<div class="col-md-12">
    <div class="col-md-6">
        <div class="container">
            <div class="row">
                <div class="well">
                    <div class="list-group">
                        <h2 class="title-adjustments">Trending Games</h2>
                        <div>
                            <p>
                                Lorem ipsum
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>








    <div class="col-md-6">
        <div class="container">
            <div class="row">
                <div class="well">
                    <div class="list-group">
                        <h2 class="title-adjustments">Recruitment Bulletin</h2>
                        <div>
                            @foreach (Sozial.Models.GroupModel item in Model.newestGroups)
                            {
                                <div class="well">
                                    <div class="media col-md-3">
                                        <figure class="pull-left img_resizer">
                                            @if (String.IsNullOrEmpty(item.groupPicture))
                                            {
                                                <img class="media-object img-rounded img-responsive thumbnails" src="http://placehold.it/350x250" alt="placehold.it/350x250">
                                            }
                                            else
                                            {
                                                <a href="../Group/Details/@item.groupID"><img class="media-object img-rounded img-responsive thumbnails" src="@item.groupPicture" alt="@Html.DisplayFor(modelItem => item.groupID)" /></a>
                                            }
                                        </figure>
                                    </div>
                                    <div class="homepage-group-name">
                                        <h4>
                                            @item.groupName
                                        </h4>
                                    </div>
                                    <div>
                                        <p>
                                            @item.groupDescription
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    </div>
</div>

