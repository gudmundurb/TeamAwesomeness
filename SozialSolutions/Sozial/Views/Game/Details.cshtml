                                {
                                    <img class="img-responsive" src="@Url.Content(Model.imageUrl)" alt="@Html.DisplayFor(model => model.nameOfGame) thumbnail" />
                                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">See full Image</button>

                                    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
