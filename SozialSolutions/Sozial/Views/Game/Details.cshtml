                                                    <img src="@Url.Content(Model.imageUrl)" class="img-responsive">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <img class="media-object img-responsive" src="http://placehold.it/350x250" alt="placehold.it/350x250">
                                }
                        </div>
                    </li>
