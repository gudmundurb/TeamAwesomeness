@model IEnumerable<Sozial.Models.GameModel>

@{
    ViewBag.Title = "All Games";
}
<div class="container">
    <div class="row">
        <div class="well">
            <h2 class="title-adjustments">Games</h2>
            <hr />
            <p>
                @Html.ActionLink("Add New Game", "Create", null, new { @class = "btn btn-success" })
            </p>
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <a class="list-group-item active">

                        <div class="media col-md-3">
                            <figure class="pull-left img_resizer">
                                @if (String.IsNullOrEmpty(item.imageUrl))
                                {
                                    <img class="media-object img-rounded img-responsive thumbnails" src="http://placehold.it/350x250" alt="placehold.it/350x250">
                                }
                                else
                                {
                                    <img class="media-object img-rounded img-responsive thumbnails" src="@item.imageUrl" alt="@Html.DisplayFor(modelItem => item.nameOfGame)" />
                                }
                            </figure>
                        </div>
                        <div class="col-md-6">
                            <h3 class="list-group-item-heading">@Html.DisplayFor(modelItem => item.nameOfGame)</h3>
                            <h4>@Html.DisplayFor(modelItem => item.genre)</h4>
                            <p class="list-group-item-text text_limit title-adjustments">
                                @Html.DisplayFor(modelItem => item.aboutGame)
                            </p>
                            <input type="button" title="Details" value="Details" onclick="location.href='@Url.Action("Details", "Game", new { id = item.gameID })'" class="btn btn-default btn-md" />
                        </div>
                        <div class="col-md-3 text-center">                            
                            <input type="button" title="Edit" value="Edit" onclick="location.href='@Url.Action("Edit", "Game", new { id = item.gameID })'" class="btn btn-default btn-md btn-block" />
                            <input type="button" title="Delete" value="Delete" onclick="location.href='@Url.Action("Delete", "Game", new { id = item.gameID })'" class="btn btn-danger btn-md btn-block" />
                            <div class="stars">
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star-empty"></span>
                            </div>
                            <p>
                                @Html.DisplayFor(modelItem => item.isTopTen)
                                @Html.DisplayNameFor(model => model.isTopTen)
                            </p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>


