@model IEnumerable<Sozial.Models.GameModel>

@{
    ViewBag.Title = "All Games";
}
<div class="container">
    <div class="row">
        <div class="well">
            <h2 class="title-adjustments">Games</h2>
            <hr />
            <p>
                @Html.ActionLink("Add New Game", "Create", null, new { @class = "btn btn-success" })
            </p>
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <a class="list-group-item active">

                        <div class="media col-md-3">
                            <figure class="pull-left img_resizer">
                                @if (String.IsNullOrEmpty(item.imageUrl))
                                {
                                   
                                    <img class="media-object img-rounded img-responsive thumbnails" src="http://placehold.it/350x250" alt="placehold.it/350x250">
                                    @Html.HiddenFor(modelItem => item.imageUrl, new { id = "natureOfVisitField" })
                                }
                                else
                                {
                                    <img class="media-object img-rounded img-responsive thumbnails" src="@item.imageUrl" alt="@Html.DisplayFor(modelItem => item.nameOfGame)" />
                                }
                            </figure>
                        </div>
                        <div class="col-md-6">
                            <h3 class="list-group-item-heading">@Html.DisplayFor(modelItem => item.nameOfGame)</h3>
                            <h4>@Html.DisplayFor(modelItem => item.genre)</h4>
                            <!--CHANGES FROM HERE ON-->
                            <p class="list-group-item-text text_limit">
                                @Html.DisplayFor(modelItem => item.aboutGame)
                            </p>
                            <div class="title-adjustments"><input id="readMore" type="button" title="Read More" value="...Read more" onclick="location.href='@Url.Action("Details", "Game", new { id = item.gameID })'" /></div>
                        </div>
                        <div class="col-md-3 text-center">
                            <span class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Edit", "Game", new { id = item.gameID })'"><i class="glyphicon glyphicon-pencil"></i> Edit</span>
                            <span class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Details", "Game", new { id = item.gameID })'"><i class="glyphicon glyphicon-info-sign"></i> Details</span>
                            <span class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("Delete", "Game", new { id = item.gameID })'"><i class="glyphicon glyphicon-remove"></i> Delete</span>
                            <!--CHANGES DONE-->
                            <div class="stars">
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star-empty"></span>
                            </div>
                            <p>
                                @Html.DisplayFor(modelItem => item.isTopTen)
                                @Html.DisplayNameFor(model => model.isTopTen)
                            </p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>


