@model IEnumerable<Sozial.Models.GameModel>

@{
    ViewBag.Title = "All Games";
}
<div class="container">
    <div class="row">
        <div class="well">
            <h2 class="title-adjustments">Games</h2>
            <hr/ >
            <p>
                @Html.ActionLink("Add New Game", "Create", null, new { @class = "btn btn-success" })
            </p>
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <a href="@Url.Action("Details","Game", new { id = item.gameID })" class="list-group-item active">

                        <div class="media col-md-3">
                            <figure class="pull-left img_resizer">
                                @if (String.IsNullOrEmpty(item.imageUrl))
                                {
                                    <img class="media-object img-rounded img-responsive thumbnails" src="http://placehold.it/350x250" alt="placehold.it/350x250">
                                }
                                else
                                {
                                    <img class="media-object img-rounded img-responsive thumbnails" src="@item.imageUrl" alt="@Html.DisplayFor(modelItem => item.nameOfGame)" />
                                }
                            </figure>
                        </div>
                        <div class="col-md-6">
                            <h3 class="list-group-item-heading">@Html.DisplayFor(modelItem => item.nameOfGame)</h3>
                            <h4>@Html.DisplayFor(modelItem => item.genre)</h4>
                            <p class="list-group-item-text">
                                @Html.DisplayFor(modelItem => item.aboutGame)
                            </p>
                        </div>
                        <div class="col-md-3 text-center">
                            <h2> 14240 <small> votes </small></h2>
                            <button type="button" class="btn btn-default btn-lg btn-block"> Vote Now! </button>
                            <div class="stars">
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star"></span>
                                <span class="glyphicon glyphicon-star-empty"></span>
                            </div>
                            <p> @Html.DisplayFor(modelItem => item.isTopTen)
                            @Html.DisplayNameFor(model => model.isTopTen)</p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>


<!--
