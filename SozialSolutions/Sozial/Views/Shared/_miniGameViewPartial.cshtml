@model Sozial.Models.GameModel

<div class="widget-area comment-section">
    <div>
        <dl class="well">
            <dd>
                <h4>
                    @Html.DisplayFor(model => model.nameOfGame)
                </h4>
            </dd>
            <dd>
                <h5>
                    @Html.DisplayFor(model => model.genre)
                </h5>
            </dd>
            <dd>
                <h6>
                    @Html.DisplayFor(model => model.imageUrl)
                </h6>
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Unfavorite", "../Game/removeGameFromFave", new { id = Model.gameID })
    </p>
</div>
