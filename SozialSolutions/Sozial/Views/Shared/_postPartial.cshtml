@model Sozial.Models.PostModel

<script src="~/Scripts/jquery.validate.js"></script>
<div class="posts">
    <div class="widget-area">        
        <div class="comment-section">
            <div class="col-md-1 thumbnail no-margin">
                @if (String.IsNullOrEmpty(Model.userPicture))
                {
                    <img class="img-responsive img-rounded" src="http://avatarbox.net/avatars/img7/blue_invader_avatar_picture_70258.jpg" alt="No profile picture" />
                }
                else
                {
                    <img src="@Url.Content(Model.userPicture)" class="img-responsive" alt="@Model.userID picture" />
                }
            </div>
            <a href="@Url.Action("Profile", "Home", new { @Model.userID })" title="Username">@Model.userID</a>            
            <div class="pull-right">
                <a href="@Url.Action("Delete", "Post", new { id = Model.postID })" class="btn btn-default btn-xs change-post"><span class="glyphicon glyphicon-remove delete"></span></a>
                <a href="@Url.Action("Edit", "Post", new { id = Model.postID })" class="btn btn-default btn-xs change-post"><span class="glyphicon glyphicon-pencil edit"></span></a>
            </div>
            <p>
                @Html.DisplayFor(modelItem => Model.text)
            </p>
            <em>
                <small>
                    created on @Model.createdDate.Day/@Model.createdDate.Month/@Model.createdDate.Year
                </small>
            </em>
            @if (!String.IsNullOrEmpty(Model.imageUrl))
            {
                <div class="row">
                    <div class="col-md-12">
                        <img src="@Url.Content(Model.imageUrl)" class="img-responsive" alt="@Model.userID picture" />
                    </div>
                </div>
            }
        </div>
        <hr />
        <!-- REPLY HERE -->
        <div class="col-md-12">
            @Html.Partial("../Shared/_replyToPostPartial", new Sozial.Models.CommentModel(@Model.postID))
        </div>
        <!-- REPLY HERE -->
    </div>
</div>
<a id="toggleMe" class="btn btn-success btn-sm  pull-right">See All Comments</a>
<div class="comments" id="toToggle">
    <div class="widget-area comment-section">
        @if (Model.comments != null)
        {
            foreach (Sozial.Models.CommentModel comm in Model.comments)
            {

                <div class="row">
                    <div class="col-md-1">
                        <div class="img_resizer thumbnail">                            
                            <img src="@Url.Content(Model.userPicture)" />
                        </div>                        
                    </div>
                    <div class="col-md-2">
                        <a href="@Url.Action("Profile", "Home", new { comm.authorID })" title="Username">@comm.authorID</a>
                    </div>
                    <div class="col-md-10">
                        <p>
                            @Html.DisplayFor(modelItiem => comm.commentText)
                        </p>
                    </div>
                </div>
                <hr class="row" />
            }
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/toggle.js"></script>