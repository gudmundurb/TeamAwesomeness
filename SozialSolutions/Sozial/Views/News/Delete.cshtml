@model Sozial.Models.NewsModel

@{
    ViewBag.Title = "Delete";
}

<div class="well item-details">
    <h4>Are you sure you want to delete this?</h4>
    <div class="widget-area comment-section">
        <div>
            <p><b>@Html.DisplayNameFor(model => model.title):</b> @Html.DisplayFor(model => model.title)</p>
        </div>
        <div>
            <p><b>@Html.DisplayNameFor(model => model.text):</b> @Html.DisplayFor(model => model.text)</p>
        </div>
    </div>
