@model IEnumerable<Sozial.Models.NewsModel>

@{
    ViewBag.Title = "News";
}
<div class="container">
    <div class="row">
        <div class="well">
            <h2 class="title-adjustments">News</h2>
            <hr />
            <p>
                @Html.ActionLink("Add News", "Create", null, new { @class = "btn btn-success" })
            </p>
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <a class="list-group-item active">
                        <div class="media col-md-3">
                            <figure class="pull-left img_resizer">
                                @if (String.IsNullOrEmpty(item.imageUrl))
                                {
                                    <img class="media-object img-rounded img-responsive thumbnails" src="http://placehold.it/350x250" alt="placehold.it/350x250">
                                }
                                else
                                {
                                    <img class="media-object img-rounded img-responsive thumbnails" src="@item.imageUrl" alt="@Html.DisplayFor(modelItem => item.title)" />
                                }
                            </figure>
                        </div>
                        <div class="col-md-6">
                            <h3 class="list-group-item-heading">@Html.DisplayFor(modelItem => item.title)</h3>
                            <p>@Html.DisplayFor(modelItem => item.createdDate)</p>
                            <p class="list-group-item-text text_limit">
                                @Html.DisplayFor(modelItem => item.text)
                            </p>
                            <div class="title-adjustments"><input id="readMore" type="button" title="Read More" value="...Read more" onclick="location.href='@Url.Action("Details", "News", new { id = item.newsID })'" /></div>
                        </div>
                        <div class="col-md-3 text-center">
                            <span class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Edit", "News", new { id = item.newsID })'"><i class="glyphicon glyphicon-pencil"></i> Edit</span>
                            <span class="btn btn-default btn-sm" onclick="location.href='@Url.Action("Details", "News", new { id = item.newsID })'"><i class="glyphicon glyphicon-info-sign"></i> Details</span>
                            <span class="btn btn-danger btn-sm" onclick="location.href='@Url.Action("Delete", "News", new { id = item.newsID })'"><i class="glyphicon glyphicon-remove"></i> Delete</span>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/text_delimitator.js"></script>
<script src="~/Scripts/gameList.js"></script>