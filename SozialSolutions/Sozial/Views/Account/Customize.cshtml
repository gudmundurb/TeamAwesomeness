@model Sozial.Models.AccountCustomizeViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customize</title>
</head>
<body>
    @using (Html.BeginForm("Customize", "Account"))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>AccountCustomizeViewModel</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.ProfilePicture, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProfilePicture)
                    @Html.ValidationMessageFor(model => model.ProfilePicture)
                </div>
            </div>

            @if (Model.steam)
            {
                <div>
                    <script src="~/Scripts/getProfilePic.js"></script>
                    <a class="badge" onclick="insertProfile()">Use your Steam Profile Picture instead</a>
                </div>
            }
    
            <div class="form-group">
                @Html.LabelFor(model => model.profileBanner, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.profileBanner)
                    @Html.ValidationMessageFor(model => model.profileBanner)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
    </div>
</body>
</html>
